<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/comment_context"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:text="孩子很喜欢，已经买了一车了。孩子很喜欢，已经买了一车了。" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:text="6月1日"/>

                <TextView
                    android:id="@+id/comment_user"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="用户名"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/comment_pass"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="auditPass"
            android:src="@drawable/comment_pass" />

        <ImageView
            android:id="@+id/comment_fail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="auditFail"
            android:src="@drawable/comment_fail" />

        <TextView
            android:id="@+id/comment_text_pass"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="-59dp"
            android:layout_gravity="center_vertical"
            android:text="@string/comment_pass"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/comment_text_fail"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="-50dp"
            android:layout_gravity="center_vertical"
            android:text="@string/comment_fail"
            android:visibility="invisible"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="18dp"
        android:background="#F0F0F0" />

</LinearLayout>